<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    tools:context="com.example.andrzejdevcom.projectbazydanychuzytkownikow.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_marginTop="-10dp"
        android:background="@drawable/irebase"
        android:layout_height="90dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dodaj nowego pracownika"
        android:textColor="@android:color/black"
        android:textSize="26dp" />

    <EditText
        android:id="@+id/imieET"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:hint="Podaj nazwisko" />

    <EditText
        android:id="@+id/nazwiskoET"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:hint="Podaj imie" />

    <EditText
        android:id="@+id/wiekET"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:hint="Podaj wiek" />

    <EditText
        android:id="@+id/wysokoscET"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:hint="Podaj wysokosc" />

    <EditText
        android:id="@+id/wagaET"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:hint="Podaj wage" />

    <EditText
        android:id="@+id/miejsceET"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:hint="Miejsce zamieszkania"
        android:lines="1" />

    <EditText
        android:id="@+id/hobbyET"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:hint="Podaj hobby" />

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zapisz" />

    <TextView
        android:id="@+id/sign_in_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zaloguj sie do konta administratora" />


</LinearLayout>
